#include<stdio.h>

void vi (int n){
    if (n == 0){
        printf("%d e igual a zero.", n);
    }
    else{
        printf("%d e diferente de zero.", n);
    }
}
int main (){
    int valor;
        printf("Digite um valor inteiro: ");
        scanf("%d", &valor);
        vi(valor);

    return 0;
}
